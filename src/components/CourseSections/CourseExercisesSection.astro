---
import LinkCard from "@components/LinkCard.astro";
import { getBasedUrl } from "@utils/paths";
import type { CoursesItems } from "@/types/Courses";

interface Props {
    items: CoursesItems;
}

const { items } = Astro.props;
---

<section
    class="max-w-screen px-5 lg:max-w-screen-lg xl:max-w-screen-xl mx-auto mb-30"
>
    <h2 class="text-center mb-10 text-text-inverted">Лабораторные работы</h2>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-5 w-full">
        {
            items
                .sort((prev, next) => {
                    return (
                        parseInt(prev.data.number) - parseInt(next.data.number)
                    );
                })
                .map((item) => {
                    return (
                        <LinkCard
                            title={item.data.title}
                            number={item.data.number}
                            href={getBasedUrl(`/labs/${item.id}`)}
                        />
                    );
                })
        }
    </ul>
</section>
