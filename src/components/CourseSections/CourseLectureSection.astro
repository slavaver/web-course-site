---
import LectureCard from "@components/LectureCard.astro";
import { getBasedUrl } from "@utils/paths";
import type { LectureItems } from "@/types/Courses";

interface Props {
    items: LectureItems;
}

const { items } = Astro.props;
---

<section
    class="section-lectures bg-bg-primary py-20 rounded-[30px] sm:rounded-[60px] mb-30"
>
    <div class="px-5 lg:max-w-screen-lg xl:max-w-screen-xl mx-auto">
        <h2 class="text-center mb-10">Лекции</h2>
        <ul class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5 w-full">
            {
                items.map((item, index) => (
                    <>
                        {(() => {
                            switch (index % 9) {
                                case 0:
                                    return (
                                        <div class="flex aspect-ratio-square rounded-[30px] overflow-hidden">
                                            <img
                                                src={getBasedUrl(
                                                    "/assets/img/cat-chill-table.svg"
                                                )}
                                                alt="лапка котика с сердечками"
                                                class="mx-auto"
                                            />
                                        </div>
                                    );
                                case 4:
                                    return (
                                        <div class="flex aspect-ratio-square rounded-[30px] overflow-hidden">
                                            <img
                                                src={getBasedUrl(
                                                    "/assets/img/cat-table-vue.svg"
                                                )}
                                                alt="лапка котика с сердечками"
                                                class="mx-auto"
                                            />
                                        </div>
                                    );
                                case 8:
                                    return (
                                        <div class="flex aspect-ratio-square rounded-[30px] overflow-hidden">
                                            <img
                                                src={getBasedUrl(
                                                    "/assets/img/cat-cute.svg"
                                                )}
                                                alt="лапка котика с сердечками"
                                                class="mx-auto"
                                            />
                                        </div>
                                    );
                            }
                        })()}
                        <LectureCard
                            title={item.data.title}
                            href={item.data.href}
                            description={item.data.description}
                        />
                    </>
                ))
            }
        </ul>
    </div>
</section>
