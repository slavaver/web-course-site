---
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";
import Pagination from "../components/navigation/Pagination.astro";

export interface Props {
  content: {
    title: string;
  };
}

const {
  content: { title },
} = Astro.props;

const { url } = Astro.props;
---

<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/web-course-site/favicon.svg" />
    <title>Веб-технологии</title>
  </head>

  <body class="flex flex-col min-h-screen">
    <header class="bg-primary sticky top-0">
      <NavBar />
    </header>
    <main class="flex-grow">
      <div class="container mx-auto mt-16 prose lg:prose-ls px-2">
        <div class="text-sm breadcrumbs">
          <ul>
            <li>
              <a href="/web-course-site/">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  class="w-4 h-4 mr-2 stroke-current"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                  ></path></svg
                >
                Домой
              </a>
            </li>
            <li>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="w-4 h-4 mr-2 stroke-current"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path></svg
              >
              {title}
            </li>
          </ul>
        </div>
        <h1>{title}</h1>
        <slot />
        <Pagination url={url} />
      </div>
      <Footer />
    </main>
  </body>
</html>
