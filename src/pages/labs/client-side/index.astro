---
import { getCollection } from "astro:content";

import CourseLayout from "../../../layouts/CourseLayout.astro";

const yearOnMain = "2023";

const allCourses = await getCollection("courses");

const clientSideBasics = allCourses.filter((post) =>
    post.id.includes(`client-side/full-time/${yearOnMain}`)
);

const statementHref =
    "https://drive.google.com/drive/folders/1Ifv2U1KM9Xu-n8btd0lYwXjttPSIfc1j?usp=drive_link";
const labs = clientSideBasics.filter((post) => post.data.type === "labs");
const rk = clientSideBasics.filter((post) => post.data.type === "rk");
const schedule = clientSideBasics.filter(
    (post) => post.data.type === "schedule"
);

const lectures = [
    {
        title: "Лекция 1",
        description: ["Основы Typescript", "Vue.js"],
        href: "http://labcolor.space/lecture1/index.html",
    },
    {
        title: "Лекция 2",
        description: [
            "Псевдонимы типов",
            "Объекты",
            "Объединения и пересечения",
        ],
        href: "http://labcolor.space/lecture2/index.html",
    },
    {
        title: "Лекция 3",
        description: ["Package.json", "Классы", "Наследование", "Interface"],
        href: "http://labcolor.space/lecture3/index.html",
    },
    {
        title: "Лекция 4",
        description: [
            "Интерфейсы и типы",
            "Контрактная разработка",
            "Обобщения работа с ошибками",
            "Предикаты",
        ],
        href: "http://labcolor.space/lecture4/index.html",
    },
    {
        title: "Лекция 5",
        description: [
            "Отношения между типами",
            "Утверждение типа",
            "Работа с DOM",
            "Асинхронные функции",
        ],
        href: "http://labcolor.space/lecture5/index.html",
    },
    {
        title: "Лекция 6",
        description: ["Модули", "Манипуляции с типами", "Utility types"],
        href: "http://labcolor.space/lecture6/index.html",
    },
    {
        title: "Лекция 7",
        description: ["Petitue Vue", "WeakMap", "Proxy", "Vue"],
        href: "http://labcolor.space/lecture7/index.html",
    },
    {
        title: "Лекция 8",
        description: [
            "Введение во Vue",
            "Vue Composition API",
            "Основные директивы Vue",
        ],
        href: "http://labcolor.space/lecture8/index.html",
    },
    {
        title: "Лекция 9",
        description: ["Реактивность", "Unit Tests", "Vue Test"],
        href: "http://labcolor.space/lecture9/index.html",
    },
];
---

<CourseLayout
    title="Веб разработка на клиенте"
    description="Изучаем основы работы с типами и язык TypeScript, а также осваиваем применение фреймворка Vue"
    labs={labs}
    name="client-side"
    rk={rk}
    schedule={schedule}
    statementHref={statementHref}
    lectures={lectures}
/>
