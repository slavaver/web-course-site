---
import CourseLayout from "@layouts/CourseLayout.astro";
import { getCollection } from "astro:content";
import { filterCourse } from "@utils/courses";

const filter = filterCourse("2025", "full-time");
const course = await getCollection("webBasics", filter);
course.forEach((item)=> {
    item.id = "web-basics/" + item.id
})
const items = Object.groupBy(course, ({ data }) => data.type);
---

<CourseLayout
    title="Основы веб-технологий"
    description="Изучаем, как работает браузер, рассматриваем адаптивную верстку и принципы доступности"
    data={items}
/>
