---
import CourseLayout from "@layouts/CourseLayout.astro";
import { getCollection } from "astro:content";
import { filterCourse } from "@utils/courses";

const filter = filterCourse("2024", "distance");
const course = await getCollection("clientSideBasics", filter);
course.forEach((item) => {
    item.id = "client-side-basics/" + item.id;
});
const items = Object.groupBy(course, ({ data }) => data.type);
---

<CourseLayout
    title="Основы веб-разработки на клиенте"
    description="Изучаем основы JavaScript и знакомимся с различными API, предоставляемыми браузером "
    data={items}
/>
